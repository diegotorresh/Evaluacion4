<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    android:orientation="vertical"
    tools:context=".Activities.HomeActivity">


        <EditText
            android:id="@+id/register_input_nombrem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el nombre de su mascota"
            android:padding="20dp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/register_input_raza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:hint="Ingrese la raza de tu mascota"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/register_input_edad"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:hint="Ingrese la edad de su mascota"
            android:layout_marginBottom="20dp"/>
        <ImageView
            android:id="@+id/imagen_mascota"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp"
            android:src="@drawable/perrito"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="50dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar mascota"
            android:background="#FFC107"
            android:padding="20sp" />


</LinearLayout>